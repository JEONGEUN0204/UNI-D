<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_food_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:src="@drawable/icon_back_stroke"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_hanip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_food_detail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/iv_hanip_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/hanip"
                app:layout_constraintEnd_toStartOf="@id/tv_hanip_detail"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_hanip_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한입소반"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/iv_hanip_detail"
                app:layout_constraintBottom_toBottomOf="@id/iv_hanip_detail"
                app:layout_constraintStart_toEndOf="@id/iv_hanip_detail"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iv_theham_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/theham"
                app:layout_constraintStart_toStartOf="@id/iv_hanip_detail"
                app:layout_constraintTop_toBottomOf="@id/iv_hanip_detail" />

            <TextView
                android:id="@+id/tv_theham_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더함"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/iv_theham_detail"
                app:layout_constraintBottom_toBottomOf="@id/iv_theham_detail"
                app:layout_constraintStart_toStartOf="@id/tv_hanip_detail"/>

            <ImageView
                android:id="@+id/iv_ssang_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ssang"
                app:layout_constraintStart_toStartOf="@id/iv_theham_detail"
                app:layout_constraintTop_toBottomOf="@id/iv_theham_detail" />

            <TextView
                android:id="@+id/tv_ssang_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쌍대포"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/iv_ssang_detail"
                app:layout_constraintBottom_toBottomOf="@id/iv_ssang_detail"
                app:layout_constraintStart_toStartOf="@id/tv_theham_detail"/>

            <ImageView
                android:id="@+id/iv_sook_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/sook"
                app:layout_constraintStart_toStartOf="@id/iv_ssang_detail"
                app:layout_constraintTop_toBottomOf="@id/iv_ssang_detail" />

            <TextView
                android:id="@+id/tv_sook_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숙대소반"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/iv_sook_detail"
                app:layout_constraintBottom_toBottomOf="@id/iv_sook_detail"
                app:layout_constraintStart_toStartOf="@id/tv_ssang_detail"/>

            <ImageView
                android:id="@+id/iv_miho_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/miho"
                app:layout_constraintStart_toStartOf="@id/iv_sook_detail"
                app:layout_constraintTop_toBottomOf="@id/iv_sook_detail" />

            <TextView
                android:id="@+id/tv_miho_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미호식당"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/iv_miho_detail"
                app:layout_constraintBottom_toBottomOf="@id/iv_miho_detail"
                app:layout_constraintStart_toStartOf="@id/tv_sook_detail"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>